generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model users {
  id        Int    @id @default(autoincrement())
  email     String @unique
  hash      String
  salt      String
  surname   String
  name      String
  lastname  String
  avatarUrl String?
  role      Role   @default(user)
}

